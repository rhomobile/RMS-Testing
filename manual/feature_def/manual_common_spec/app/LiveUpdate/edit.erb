    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @liveupdate.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="liveupdate[test1]" class="fieldLabel">Test1</label>
            <input type="text" id="liveupdate[test1]" name="liveupdate[test1]" value="<%= @liveupdate.test1 %>" <%= placeholder( "Test1" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
