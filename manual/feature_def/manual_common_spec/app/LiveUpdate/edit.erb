<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @liveupdate.test1 %></h1>
    <a href="<%= url_for :action => :show, :id => @liveupdate.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @liveupdate.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
