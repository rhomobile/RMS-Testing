<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @apitest.TestNumber %></h1>
    <a href="<%= url_for :action => :show, :id => @apitest.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @apitest.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @apitest.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="apitest[TestNumber]" class="fieldLabel">Testnumber</label>
            <input type="text" id="apitest[TestNumber]" name="apitest[TestNumber]" value="<%= @apitest.TestNumber %>" <%= placeholder( "Testnumber" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
