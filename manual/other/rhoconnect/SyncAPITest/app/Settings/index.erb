 <div data-role="page">
  <div data-role="header" data-position="inline">
  </div>
  <div data-role="content">
    <ul data-role="listview">
      <li>
        <div class="itemLabel">
          <span class="title">Client ID:</span>
        </div>
        <div class="itemValue">
          <span class="clientID"><%= Rhom::Rhom::client_id %></span>
