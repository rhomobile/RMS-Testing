<hr>

<form name="myfrm" action=""> 
  
SyncServerURL:<br>
<input type="text" name="syncUrl" id="syncUrl" col="100" value="http://192.168.0.23:9292/application" /> 
<INPUT type="button" value="SetSyncServerURL" name="SetSyncServer" onClick="setSyncServerUrl();"> <br>   

<a href="<%= url_for :action => :login %>">Login</a>

<a href="<%= url_for :action => :logout %>">Logout</a><br>

