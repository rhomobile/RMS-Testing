<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @customer.first %></h1>
    <a href="<%= url_for :action => :show, :id => @customer.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @customer.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @customer.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="customer[first]" class="fieldLabel">First</label>
            <input type="text" id="customer[first]" name="customer[first]" value="<%= @customer.first %>" <%= placeholder( "First" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="customer[last]" class="fieldLabel">Last</label>
            <input type="text" id="customer[last]" name="customer[last]" value="<%= @customer.last %>" <%= placeholder( "Last" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="customer[address]" class="fieldLabel">Address</label>
            <input type="text" id="customer[address]" name="customer[address]" value="<%= @customer.address %>" <%= placeholder( "Address" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="customer[city]" class="fieldLabel">City</label>
            <input type="text" id="customer[city]" name="customer[city]" value="<%= @customer.city %>" <%= placeholder( "City" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="customer[email]" class="fieldLabel">Email</label>
            <input type="text" id="customer[email]" name="customer[email]" value="<%= @customer.email %>" <%= placeholder( "Email" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="customer[phone]" class="fieldLabel">Phone</label>
            <input type="text" id="customer[phone]" name="customer[phone]" value="<%= @customer.phone %>" <%= placeholder( "Phone" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="customer[state]" class="fieldLabel">State</label>
            <input type="text" id="customer[state]" name="customer[state]" value="<%= @customer.state %>" <%= placeholder( "State" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="customer[zip]" class="fieldLabel">Zip</label>
            <input type="text" id="customer[zip]" name="customer[zip]" value="<%= @customer.zip %>" <%= placeholder( "Zip" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
