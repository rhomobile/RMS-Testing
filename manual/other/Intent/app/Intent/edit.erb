<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @intent.a %></h1>
    <a href="<%= url_for :action => :show, :id => @intent.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @intent.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @intent.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="intent[a]" class="fieldLabel">A</label>
            <input type="text" id="intent[a]" name="intent[a]" value="<%= @intent.a %>" <%= placeholder( "A" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
