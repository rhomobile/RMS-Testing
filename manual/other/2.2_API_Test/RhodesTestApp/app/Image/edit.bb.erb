<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @image.object %>
    <h1>Edit <%= @image.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @image.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @image.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="image[name]" value="<%= @image.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Filename: </td>
              <td class="itemValue"><input type="text" name="image[filename]" value="<%= @image.filename %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Image uri: </td>
              <td class="itemValue"><input type="text" name="image[image_uri]" value="<%= @image.image_uri %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
