<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @image.name %></h1>
    <a href="<%= url_for :action => :show, :id => @image.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @image.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @image.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="image[name]" class="fieldLabel">Name</label>
            <input type="text" id="image[name]" name="image[name]" value="<%= @image.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="image[filename]" class="fieldLabel">Filename</label>
            <input type="text" id="image[filename]" name="image[filename]" value="<%= @image.filename %>" <%= placeholder( "Filename" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="image[image_uri]" class="fieldLabel">Image uri</label>
            <input type="text" id="image[image_uri]" name="image[image_uri]" value="<%= @image.image_uri %>" <%= placeholder( "Image uri" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
