<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Image</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @image.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="image[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Filename: </td>
                <td class="itemValue"><input type="text" name="image[filename]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Image uri: </td>
                <td class="itemValue"><input type="text" name="image[image_uri]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
