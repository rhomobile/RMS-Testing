<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @lan.city %></h1>
    <a href="<%= url_for :action => :show, :id => @lan.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @lan.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @lan.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="lan[city]" class="fieldLabel">City</label>
            <input type="text" id="lan[city]" name="lan[city]" value="<%= @lan.city %>" <%= placeholder( "City" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="lan[name]" class="fieldLabel">Name</label>
            <input type="text" id="lan[name]" name="lan[name]" value="<%= @lan.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
