<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @signaturemodule.SignatureModel %></h1>
    <a href="<%= url_for :action => :show, :id => @signaturemodule.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @signaturemodule.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @signaturemodule.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="signaturemodule[SignatureModel]" class="fieldLabel">Signaturemodel</label>
            <input type="text" id="signaturemodule[SignatureModel]" name="signaturemodule[SignatureModel]" value="<%= @signaturemodule.SignatureModel %>" <%= placeholder( "Signaturemodel" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
