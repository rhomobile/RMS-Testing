          <div data-role="fieldcontain">
            <label for="batterymodule[BatteryModel]" class="fieldLabel">Batterymodel</label>
            <input type="text" id="batterymodule[BatteryModel]" name="batterymodule[BatteryModel]" value="<%= @batterymodule.BatteryModel %>" <%= placeholder( "Batterymodel" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
